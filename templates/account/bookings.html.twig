{% extends 'base.html.twig' %}

{% block title %}Vos réservations passées{% endblock %}

{% block body %}
    <div class="container">
        <h1>Vos réservations</h1>
        <div class="alert alert-info mt-3">
            <p>Vous Retrouvez ci dessous toutes vos réservations passées et à venir</p>
        </div>

        {% for booking in app.user.bookings %}
            <div class="row mt-5">
                <div class="col-4">
                    <img src="{{ booking.ad.coverImage }}" alt="photo de l'annonce {{ booking.ad.title }}" class="img-fluid">
                </div>
                <div class="col-8">
                    <h4>{{ booking.ad.title }}</h4>
                    <p>
                        Réservation numéro : <strong>{{ booking.id }}</strong> <br>
                        Du <strong>{{ booking.startDate | date('d/m/Y') }}</strong> au <strong>{{ booking.endDate | date('d/m/Y') }}</strong>
                        à <strong>{{ booking.amount }}&euro;</strong>
                    </p>
                    <a href="{{ path('booking_show', {'id' : booking.id}) }}" class="btn btn-info">Plus d'informations</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}