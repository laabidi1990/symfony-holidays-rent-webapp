{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1 class="mb-4">Connectez-Vous</h1>
                    {% if hasErrors %}
                        <div class="alert alert-danger">
                            <p>Email ou mot de passe incorrectes, merci de vérifier vos identifiants</p>
                        </div>
                    {% endif %}
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="_username" id="email" class="form-control" placeholder="Entrez votre email ici" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Entrez votre mot de passe" required>
                        </div>
                        <div class="form-group d-flex justify-content-between">
                            <button type="submit" class="btn btn-success mt-3">Se connecter</button>
                            
                            <a href="{{ path('account_register') }}" class="btn btn-info mt-3">Créer un compte</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
