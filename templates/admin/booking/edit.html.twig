{% extends 'admin/base.html.twig' %}

{% block title %}Administration & édition de du réservation {{ booking.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="my-4">Modification du réservation numéro : {{ booking.id }}</h2>

        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_row(form.startDate) }}
                {{ form_row(form.endDate) }}
                {{ form_row(form.comment) }}
            </div>
            <div class="col">
                {{ form_row(form.booker) }}
                {{ form_row(form.ad) }}
                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fa fa-check"></i> Enregistrer les modifications de réservation
                </button>
            </div>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}