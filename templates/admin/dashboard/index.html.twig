{% extends 'admin/base.html.twig' %}

{% block title %}tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.users }} utlisateurs</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.ads }} annonces</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.bookings }} réservations</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.comments }} avis</h4>
                            </div>
                        </div>
                    </div>
                </div>    
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3"><i class="fa fa-arrow-up"></i> Les annonces populaires</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                            <tr>
                                <td>{{ ad.title | u.truncate(40, true) }}</td>
                                <td>
                                    <img src="{{ ad.picture }}" alt="avatar de {{ ad.firstName }}" class="avatar avatar-micro">
                                    {{ ad.firstName }} {{ ad.lastName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark">
                                        {{ ad.note | number_format(1, ',', ' ') }}
                                    </span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-dark">
                    <h2 class="alert-heading my-3"><i class="fa fa-arrow-down"></i> Les pires annonces</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}
                            <tr>
                                <td>{{ ad.title | u.truncate(40, true)}}</td>
                                <td>
                                    <img src="{{ ad.picture }}" alt="avatar de {{ ad.firstName }}" class="avatar avatar-micro">
                                    {{ ad.firstName }} {{ ad.lastName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark">
                                        {{ ad.note | number_format(1, ',', ' ') }}
                                    </span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
