{% extends 'base.html.twig' %}

{% block title %}Nos Annonces de location{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Voici les annonces de nos hotes</h1>
        <div class="row">
        {% for ad in ads %}
            {% set url = path('ads_show', {'slug': ad.slug}) %}

            <div class="col-md-4 mb-3">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; / nuit</strong> <br>
                        <small>Pas encore not√©</small>
                    </div>
                    <a href="{{ url }}">
                        <img src="{{ ad.coverImage }}" alt="image de l'appartement" style="height:200px; width:100%; display:block;">
                    </a>
                    <div class="card-body text-center">
                        <h4 class="card-title">
                            {{ ad.title }}
                        </h4>
                        <p class="card-text">
                            {{ ad.introduction }}
                        </p>
                        <a href="{{ url }}" class="btn btn-secondary">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}  
        </div>
    </div>
{% endblock %}
