
{% block _ad_images_widget %}
    <p>Ajouter vos images ici</p>
    {{ form_widget(form) }}

    <input type="hidden" id="form-counter" value="0">

    <div class="form-group">
        <button type="button" class="btn btn-info btn-sm" id='add-image'>
            Ajouter une image
        </button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="row">
        <div class="col-md-10">
            <div class="form-group" id="block_{{ id }}">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-danger" data-action="delete" data-target="block_{{ id }}">
                X
            </button>
        </div>
    </div>

{% endblock %}